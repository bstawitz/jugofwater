<%- model_class = Brainstorm -%>
<div class="page-header text-center">
  <h1><%= link_to "N", new_brainstorm_path, :class => 'hovicon effect-1 sub-a' %></h1>
</div>
<div class="row">
  <% @brainstorms.each do |brainstorm| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= link_to((brainstorm.title || brainstorm.created_at.to_formatted_s(:short)), edit_brainstorm_path(brainstorm)) %><%= link_to "", brainstorm_path(brainstorm), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'glyphicon glyphicon-trash pull-right' %></h3>
        <p><%= brainstorm.created_at.to_formatted_s(:short) unless brainstorm.title.blank? %></p>
        <p><%= truncate(brainstorm.description, length: 700) %></p>
        <p></p>
      </div>
    </div>
  </div>
  <% end %>
</div>



