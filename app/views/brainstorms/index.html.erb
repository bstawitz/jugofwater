<%- model_class = Brainstorm -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @brainstorms.each do |brainstorm| %>
      <tr>
        <td><%= link_to brainstorm.title, brainstorm_path(brainstorm) %></td>
        <td><%= truncate(brainstorm.description, length: 80) %></td>
        <td><%= brainstorm.created_at.to_formatted_s(:short) %></td>
        <td>
          <%= link_to "", edit_brainstorm_path(brainstorm), :class => 'glyphicon glyphicon-pencil' %>
          <%= link_to "",
                      brainstorm_path(brainstorm),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'glyphicon glyphicon-trash' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_brainstorm_path,
            :class => 'btn btn-primary' %>
