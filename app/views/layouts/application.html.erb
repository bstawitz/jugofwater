      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
  <% end %>
  <nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <div class="radial-menu">
        <%= link_to "Q", destroy_user_session_path, method: :delete, class: "menu-item1 hovicon small effect-1 sub-a" %>
        <a href="#" class="menu-item2 hovicon small effect-1 sub-a">P</a>
        <a href="<%= items_path %>" class="menu-item3 hovicon small effect-1 sub-a">S</a>
        <a href="<%= brainstorms_path %>" class="menu-item4 hovicon small effect-1 sub-a">W</a>
        <div class="mask"><i class="fa fa-bars fa-2x"></i></div>
      </div>
      </ul>
    </div>
  </nav>  

  <div class="container">
    <div class="row">
      <div class="col-md-12"><%= yield %></div>
    </div>
  </div>
  <footer class="footer">
     <div class="container">
     </div>
  </footer>
