<%- model_class = Item -%>
<div class="page-header text-center">
  <h1><%= link_to "S", new_item_path, :class => 'hovicon effect-1 sub-a' %></h1>
</div>
<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-4">
        <div class="thumbnail" style="height: auto; min-height: 50px;">
          <div class="caption">
            <h5><%= link_to "", item_path(item), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'glyphicon glyphicon-trash pull-right' %>
              <div id="<%= dom_id item %>">
                <span class="rest-in-place" data-formtype="textarea" data-attribute="description"> 
                  <%= item.description %>
                </span> 
              </div>
            </h5><br/>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>