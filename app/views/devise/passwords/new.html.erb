

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"form-signin" }) do |f| %>
  <h2 class="form-signin-heading">Forgot your password?</h2>
  <%= devise_error_messages! %>

  <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>

  <div>
    <br/>
    <%= f.submit "Send me reset password instructions", class: "actions btn btn-lg btn-warning btn-block" %>
    <br/>
  </div>
  <%= render "devise/shared/links" %>
<% end %>


